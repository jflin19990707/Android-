<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/alpah_scale_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按钮1"
        android:background="#efefef"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/alpha_scale_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按钮2"
        android:background="#efefef"
        android:layout_marginTop="600dp"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/testImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/vulpix"/>
    <SeekBar
        android:id="@+id/sb"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        />
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".animation.LottieActivity">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_loop="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="80dp"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/material_wave_loading" />

    </FrameLayout>
    <Button
        android:id="@+id/btn_viewPagerTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击我查看ViewPagerTab"
        android:textAllCaps="false" />

</RelativeLayout>